<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="tests" thread-count="3">

    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testcases.LoginTest"/>
            <class name="testcases.RegistrationTest"/>
            <class name="testcases.AddContactTest"/>
            <class name="testcases.EditContactTest"/>
            <class name="testcases.DeleteContactTest"/>
            <class name="testcases.SessionNavigationTest"/>
            <class name="testcases.UITest"/>
            <class name="testcases.InputValidationTest"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testcases.LoginTest"/>
            <class name="testcases.RegistrationTest"/>
            <class name="testcases.AddContactTest"/>
